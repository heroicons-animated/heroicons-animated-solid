{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "incremental": true,
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./src/*"]
    }
  },
  "include": ["app.config.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", ".vinxi", ".output", "packages/solid"]
}
